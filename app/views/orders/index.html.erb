<table class="table table-bordered order-index">
  <% @orders.each do |e| %>
    <tr>
      <td>
        <%= e.name %>
      </td>
      <td>
      <%= link_to "詳細", order_path(e), :class => "btn btn-primary" %>
      </td>
      <td>
        <%= e.created_at.to_s(:short) %>
      </td>
    </tr>
  <% end %>
  </table>
  <%= paginate @orders %>