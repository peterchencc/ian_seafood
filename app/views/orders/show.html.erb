<h1>訂單 #<%= @order.id %></h1>

<%= link_to '結帳', checkout_order_path(@order) %>

<h1>明細</h1>
<table>
  <thead>
    <tr>
      <th>產品</th> <th>單價</th> <th>數量</th> <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.line_items.each do |line_item| %>
      <tr>
        <td><%= link_to line_item.product.name, line_item.product %></td>
        <td><%= line_item.subtotal %></td>
        <td><%= line_item.qty %></td>
        <td><%= line_item.amount %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="2"></td>
      <td>總計</td>
      <td><%= @order.total %></td>
    </tr>
  </tbody>
</table>


<h1>交易紀錄</h1>

<ul>
  <% @order.trades.each do |trade| %>
  <li><%= trade.trade_number %> <%= trade.paid? ? :已付款 : :未付款 %></li>
  <% end %>
</ul>
